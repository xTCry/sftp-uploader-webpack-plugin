{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "removeComments": true,
    "outDir": "./lib",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "declaration": true,
    "allowJs": true
  },
  "include": [
    "src"
  ]
}